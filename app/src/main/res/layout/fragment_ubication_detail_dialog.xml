<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <Toolbar
            android:id="@+id/ToolbarUbication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:src="@drawable/platzi_conf_2"
                        android:scaleType="centerCrop">
                    </ImageView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp"
                    android:layout_margin="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvDetailNombreLugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lugar Platzi Conf"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center_horizontal"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp">
                        </TextView>
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_pin">
                            </ImageView>
                            <TextView
                                android:id="@+id/tvUbicationDirrecion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="UbicaciÃ³n"
                                android:textSize="15sp"
                                android:textColor="@color/colorPrimary"
                                android:gravity="left"
                                android:layout_margin="5dp">
                            </TextView>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary">
                        </View>

                        <LinearLayout
                            android:id="@+id/llTelefonoLugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_phone">
                            </ImageView>
                            <TextView
                                android:id="@+id/tvUbicationTelefono"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Telefono"
                                android:textSize="15sp"
                                android:textColor="@color/colorPrimary"
                                android:gravity="left"
                                android:layout_margin="5dp">
                            </TextView>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary">
                        </View>

                        <LinearLayout
                            android:id="@+id/llSitioWeb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_link">
                            </ImageView>
                            <TextView
                                android:id="@+id/tvUbicationWebsite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sitio Web"
                                android:textSize="15sp"
                                android:textColor="@color/colorPrimary"
                                android:gravity="left"
                                android:layout_margin="5dp">
                            </TextView>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary">
                        </View>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>